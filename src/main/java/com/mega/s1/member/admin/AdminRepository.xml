<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mega.s1.member.admin.AdminRepository">

	<select id="getMemberList" parameterType="Pager" resultType="MemberVO">
		select * from member where id
		<include refid="search"></include>
		limit #{startRow}, 10
	</select>


	<sql id="search">
		like concat('%', #{search}, '%')
	</sql>

	<select id="getMemberCount" resultType="Long">
		select count(id) from member where id 
		<include refid="search"></include>
	</select>
	
	<insert id="addTheater" parameterType="TheaterVO" >
		insert into theater values (#{theaterName},#{localCode},#{address},#{info},#{parking})
	</insert>
	
	<select id="getTheaterList" parameterType="Pager" resultType="TheaterVO">
		select * from theater where theaterName
		<include refid="search"></include>
		limit #{startRow}, 10
	</select>
	
	<select id="getTheaterCount" resultType="Long">
		select count(theaterName) from theater where theaterName
		<include refid="search"></include>
	</select>
	
	<select id="theaterSelect" parameterType="TheaterVO" resultType="TheaterVO">
		select * from theater where theaterName=#{theaterName}
	</select>
	
	<update id="theaterUpdate" parameterType="TheaterVO">
		update theater set theaterName=#{theaterName}, localCode=#{localCode}, address=#{address}, info=#{info}, parking=#{parking} where theaterName=#{theaterName}
	</update>
	
</mapper>