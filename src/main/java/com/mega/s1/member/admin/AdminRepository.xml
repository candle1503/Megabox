<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mega.s1.member.admin.AdminRepository">

	<select id="getMemberList" parameterType="Pager" resultType="MemberVO">
		select * from member where id
		<include refid="search"></include>
		limit #{startRow}, 10
	</select>


	<sql id="search">
		like concat('%', #{search}, '%')
	</sql>

	<select id="getMemberCount" resultType="Long">
		select count(id) from member where id 
		<include refid="search"></include>
	</select>
	
	<insert id="addTheater" parameterType="TheaterVO" useGeneratedKeys="true" keyProperty="theaterNum">
		insert into theater values (#{theaterNum},#{name},#{localCode},#{address},#{info},#{parking})
	</insert>
	
	<select id="getTheaterList" parameterType="Pager" resultType="TheaterVO">
		select * from theater where name
		<include refid="search"></include>
		limit #{startRow}, 10
	</select>
	
	<select id="getTheaterCount" resultType="Long">
		select count(name) from theater where name
		<include refid="search"></include>
	</select>
	
	<select id="theaterSelect" parameterType="TheaterVO" resultType="TheaterVO">
		select * from theater where theaterNum=#{theaterNum}
	</select>
	
	<update id="theaterUpdate" parameterType="TheaterVO">
		update theater set name=#{name}, localCode=#{localCode}, address=#{address}, info=#{info}, parking=#{parking} where theaterNum = #{theaterNum}
	</update>
	
	<insert id="theaterRoomSet" parameterType="TheaterRoomVO" keyProperty="theaterRoomCode" useGeneratedKeys="true">
		insert into theaterRoom values (#{name},#{roomName},0,100)
	</insert>
	
	<select id="getRoomList" parameterType="TheaterVO" resultType="TheaterRoomVO">
		select * from theaterRoom where name=#{name}
	</select>
	
	<select id="movieTimeCheck" resultType="MovieVO" parameterType="String">
	<![CDATA[ 
		select * from movie where openDay  < str_to_date(#{choosedTime} , '%Y-%m-%d')
		]]> 
	</select >
	
	<select id="getTheaterNum" resultType="Integer" parameterType="TheaterVO">
		select theaterNum from theater where name=#{name}
	</select>
	
	<insert id="setTheaterRoom" parameterType="RoomMovieTimeVO" keyProperty="timeCode" useGeneratedKeys="true">
		insert into roomMovieTime values (0,#{startTime},#{roomName},#{movieNum},#{theaterRoomCode},#{theaterNum})
	</insert>
	
	<select id="getTheaterRoom" parameterType="RoomMovieTimeVO" resultType="RoomMovieTimeVO">
		select * from roomMovieTime where roomName= #{roomName} and date_format(startTime, '%Y-%c-%e')= #{startDay} limit 1
	</select>
	
	<insert id="setSeat" parameterType="RoomMovieTimeVO" keyProperty="seatCode" useGeneratedKeys="true">
		insert into seat values (0,#{timeCode},#{seatNum},0)
	</insert>
	
	<select id="getTimeCode" parameterType="RoomMovieTimeVO" resultType="Integer">
		select timeCode from roomMovieTime where startTime=#{startTime} and roomName=#{roomName}
	</select>
	
</mapper>