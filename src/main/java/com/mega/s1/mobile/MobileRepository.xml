<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.mega.s1.mobile.MobileRepository">

	<select id="getMovieVideo" parameterType="Integer" resultType="MovieFileVO">
		select * from movieFile where movieNum=#{movieNum} and status=1 limit 1
	</select>
	
	<select id="getMovieNum" resultType="MovieFileVO">
		select movieNum from movie where openDay > now()
	</select>
	
</mapper>