<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.mega.s1.board.notice.NoticeRepository">

	<insert id="boardInsert" parameterType="com.mega.s1.board.notice.NoticeVO" useGeneratedKeys="true" keyProperty="num">
		insert into notice values(#{num}, #{separate}, #{title}, #{contents}, now(), 1)
	</insert>

	<select id="boardList" parameterType="com.mega.s1.board.notice.NoticeVO" resultType="com.mega.s1.board.notice.NoticeVO">
		select * from notice order by num desc
	</select>

</mapper>