<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.mega.s1.board.notice.NoticeRepository">

	<resultMap type="NoticeVO" id="selectResult">
		<id column="num" property="num"/>
		<result column="title" property="title"/>
		<result column="contents" property="contents"/>
		<result column="regDate" property="regDate"/>
		<result column="separate" property="separate"/>
		<result column="name" property="name"/>
		<result column="localCode" property="localCode"/>
		<collection property="noticeFileVOs" javaType="List" ofType="NoticeFileVO">
			<id column="fileNum" property="fileNum"/>
			<result column="fileName" property="fileName"/>
			<result column="oriName" property="oriName"/>
		</collection>
	</resultMap>


	<insert id="boardInsert" parameterType="NoticeVO" useGeneratedKeys="true" keyProperty="num">
		insert into notice values(#{num}, #{title}, #{contents}, now(), #{separate}, #{name}, #{localCode})
	</insert>

	<sql id="search">
		like concat('%', #{search}, '%')
	</sql>
	
	<sql id="nameSearch">
		like concat('%', #{name}, '%')
	</sql>


	<select id="boardList" parameterType="Pager" resultType="NoticeVO">
		select * from notice where name 
		<include refid="nameSearch"></include>
		and 
		title
		<include refid="search"></include>
		order by num desc limit #{startRow}, 10
	</select>
	
	<select id="localCodeNameList" parameterType="TheaterVO" resultType="TheaterVO">
		select name from theater
	</select>
	
	<select id="boardCount" parameterType="Pager" resultType="Long">
		select count(num) from notice where name 
		<include refid="nameSearch"></include>
		and
		title		<include refid="search"></include>
	</select>
	
	<select id="boardSelect" parameterType="NoticeVO" resultMap="selectResult">
		select N.*, F.*
		from notice N left join noticeFile F
		on (N.num = F.num)
		where N.num=#{num}
	</select>
	
	<update id="boardUpdate" parameterType="NoticeVO">
		update notice set title = #{title}, contents = #{contents}, separate = #{separate}, name = #{name}, localCode = #{localCode} where num = #{num}
	</update>
	
	<delete id="boardDelete" parameterType="NoticeVO">
		delete from notice where num = #{num}
	</delete>

	<select id="boardSelectList" parameterType="String" resultType="NoticeVO">
		select * from notice where name = #{name}
	</select>
	

</mapper>