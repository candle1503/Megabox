<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mega.s1.member.MemberRepository">
	<insert id="setJoin" parameterType="MemberVO">
		insert into member values (#{id},#{password},#{name},#{phone},#{email},#{age},now())
	</insert>
	
	<select id="setLogin" parameterType="MemberVO" resultType="MemberVO">
		select * from member where id=#{id} and password=#{password}	
	</select>
	
	<select id="idCheck" parameterType="MemberVO" resultType="MemberVO">
		select * from member where id=#{id}	
	</select>
	
	<delete id="setDelete" parameterType="MemberVO">
		delete from member where id=#{id}	
	</delete>
	
	<update id="setUpdate" parameterType="MemberVO">
		update member set password=#{password},email=#{email}, phone= #{phone} where id=#{id}
	</update>
	
	<select id="getTicketCount" parameterType="MemberVO" resultType="Integer">
		select count(ticketNum) from ticket where id=#{id}
	</select>
	
	<select id="getReviewCount" parameterType="MemberVO" resultType="Integer">
		select count(reviewNum) from review where writer=#{id}
	</select>
	
	<select id="getReviewList" parameterType="MemberVO" resultType="ReviewVO">
		select * from review where writer=#{id}
	</select>
	
	<select id="getMovieImage" parameterType="Integer" resultType="String">
		select fileName from movieFile where movieNum=#{movieNum} and status=2 limit 1
	</select>
	
</mapper>